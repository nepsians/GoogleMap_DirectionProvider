<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/BG_color"
    android:id="@+id/Drawerlayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/ambupic" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="74dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="-191dp"
        android:background="@color/Button_color2"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Register"
        android:textSize="40dp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="191dp"
        android:background="@color/Button_color1"
        android:fontFamily="sans-serif-smallcaps"
        android:fontStyle="italic"
        android:text="Login"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/showToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="104dp" />

    <TextView
        android:id="@+id/showToken2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="52dp"
        android:textColor="@color/BG_color"
        android:text="Token"
        android:textSize="4dp" />

    <Button
        android:id="@+id/Mapbtn"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="serif"
        android:includeFontPadding="false"
        android:text="GoogleMap"
        tools:textFontWeight="23" />

    <ImageView
        android:layout_width="179dp"
        android:layout_height="116dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ambu" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_items">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>